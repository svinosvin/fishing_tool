<Window x:Class="fishing_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fishing_tool"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding MainViewModel, Source={StaticResource VmLocator}}"
        Title="Fishing Competition"     Width="1000" Height="600">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0C0862"/>
                <GradientStop Color="#FF150F9B" Offset="0.958"/>
                <GradientStop Color="#FF0F0B6F" Offset="0.734"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" Columns="2">

            <Button Content="ГЛАВНАЯ"
                    FontFamily="{Binding BaseFont}"
                    Command="{Binding GoToFirstPage}"
                  Background="#FF150F3B"
                    Foreground="WhiteSmoke"
                    FontSize="{Binding Big}"
                    FontWeight="Bold" 
                    Padding="30"
                    />
            <Button Content="ИНФО"
                    Foreground="WhiteSmoke"
                    FontFamily="{Binding BaseFont}"
                    Background="#FF150F3B"
                    FontSize="{Binding Big}"
                    FontWeight="Bold" 
                    Padding="20" 
                    Command="{Binding GoToHelpPage}"/>
        </UniformGrid>
        <UniformGrid Grid.Row="1" Columns="1">
            <Frame Content="{Binding PageSource}" NavigationUIVisibility="Hidden" ></Frame>
        </UniformGrid>
    </Grid>
</Window>
